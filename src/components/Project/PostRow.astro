---
import Card from "../Card/index.astro";
interface Props {
  title: string;
  src: string;
  url: string;
}

const { title, src, url } = Astro.props;
---

<li
  class="w-full text-neutral-100 hover:text-teal-400 ease-in-out transition-colors border-b-neutral-400 border-dashed border-b-1 my-2"
>
  <a
    class="font-bold text-xl decoration-none flex justify-between"
    href={url}
    target="_blank"
  >
    <Card>
      <div class="flex flex-col gap-2">
        <p class="inline-block whitespace-nowrap">
          {title}
        </p>
        <img src={src} alt={title} />
      </div>
    </Card>
  </a>
</li>
